{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": [
        "./src/*",
      "./node_modules/react"
      ]
    },
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "src/**/*",
    "config/jest/**/*",
    "config/.storybook/*.ts",
    "config/build/*",
    "config/build/*/*",
    "./*.config.ts"
  ]
}
